---
import '@fontsource-variable/onest';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
	description: string;
	title: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
    <meta name="robots" content="index, follow">
    <meta name="keywords" content="cleaning service, deep cleaning, maid service, Jersey City cleaning service,
      New Jersey cleaning service, post-construction cleaning, move-out cleaning, carpet cleaning, magical cleaning">

    <meta property="og:title" content={title}>
    <meta property="og:description" content={description} >
    <meta property="og:image" content="/public/archivo-page/1/gallery/img-9.webp">
    <meta property="og:url" content="https://magical-cleaningservice.com">
    <meta property="og:type" content="website">


		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<title>{title}</title>

    <ClientRouter />
    
	</head>
	<body class="overflow-hidden overflow-y-auto bg-body">
		<Header />
		<slot />
		<Footer />
	</body>

</html>

<style is:global>
  :root {
    --color-bg: 255 242 251;
    --color-border: 255 255 255;
    --color-box: 255 255 255;
    --box-border: 229 231 235;
    --box-sd: 226 232 240 / 0.5;
    --heading-1:  23 37 84;
    --heading-2: 31 41 55;
    --heading-3: 55 65 81;
    --color-icono: 0 0 0; /* Negro puro */
  }

  .dark {
    --color-bg: 3 7 18;
    --color-box: 17 24 39;
    --box-border: 243 244 246/0.1;
    --box-sd: transparent;

    --heading-1:  255 255 255;
    --heading-2:  243 244 246;
    --heading-3:  209 213 219;

    --altura_header: 80px;
    --color-icono: 255 255 255; /* Blanco puro */
  }

  html{
    scroll-behavior: smooth;
  }
  body {
    font-family: 'Onest Variable', sans-serif;
  }

  [data-toggle-nav][data-open-nav="true"] #line1 {
    transform: translateY(0.375rem) rotate(40deg);
  }
  [data-toggle-nav][data-open-nav="true"] #line2 {
    transform: scaleX(0);
    opacity: 0;
  }
  [data-toggle-nav][data-open-nav="true"] #line3 {
    transform: translateY(-0.375rem) rotate(-40deg);
  }

  
  [data-nav-overlay][data-is-visible="true"] {
    visibility: visible;
    display: flex;
  }

.menu_hamburguesa{
    display: none;
}

#header-nav {
    animation: blur-light linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }

  @keyframes blur-light {
    to {
      box-shadow: 0px 5px 50px -5px rgba(0, 0, 0, 0.1), 0px 0px 0 1px rgba(0, 0, 0, 0.1);
      background: rgba(255, 242, 251, 0.5);
      backdrop-filter: blur(10px);
    }
  }

  .dark #header-nav {
    animation: blur-dark linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }

  @keyframes blur-dark {
    to {
          box-shadow:
            0px 5px 50px -5px rgba(0, 0, 0, 0.1),
            0px 0px 0 1px rgba(0, 0, 0, 0.1);
          background: rgba(49, 40, 49, 0.3);
          backdrop-filter: blur(10px);
        }
  }
</style>