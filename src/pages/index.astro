---
import Layout from '@layouts/Layout.astro';
import Numeros from '@components/Numeros.astro';
import Reviews from '@components/Reviews.astro';
import Bento from '@components/Bento.astro';
import Hero from '@components/Hero.astro';
import FormsContact from '@components/FormsContact.astro';
---

<Layout title="Magical Cleaning Services."
	description="Magical Cleaning Services.">

	<main>
    <Hero />
		<div>
			<h2 class="lg:mt-12 mt-4 relative text-4xl lg:text-6xl text-center text-customBlue font-bold mb-10 lg:mb-20 underline-pink text-heading-1">
				Our Services
			</h2>
            <Bento />
    </div>
      <Numeros />
		<Reviews />
    <FormsContact />
	</main>
</Layout>

<style>
  .underline-pink::after {
    content: '';
    display: block;
    width: 120px; /* Ajusta este valor para cambiar el ancho de la línea */
    height: 2px; /* Grosor de la línea */
    background-color: #FF69B4; /* Color rosa */
    position: absolute;
    bottom: -10px; /* Ajusta esta distancia según sea necesario */
    left: 50%; /* Centra la línea horizontalmente */
    transform: translateX(-50%); /* Centra la línea horizontalmente */
  }

</style>
