---
import SocialPil from '../components/SocialPil.astro';
import Gmail from '../components/icons/Gmail.astro';
import Facebook from './icons/Facebook.astro';
import Instagram from './icons/Instagram.astro';
import Phone from './icons/Phone.astro';
import Tiktok from './icons/Tiktok.astro';
import Yelp from './icons/Yelp.astro';
---

<section class="relative flex flex-wrap lg:h-screen lg:items-center">
  <div class="w-full px-4 py-12 sm:px-6 sm:py-16 lg:w-1/2 lg:px-8 lg:py-24">
    <div class="mx-auto max-w-lg text-center">
      <h2 class="text-2xl font-bold sm:text-3xl text-heading-1">Let's get in touch</h2>
      <p class="mt-4 text-heading-2">
        Make it easy, make it quick. Magical Cleaning takes care of your space while you enjoy. Contact us now!
      </p>
    </div>

    <form id="contact-form" action="https://formspree.io/f/movqlyww" method="POST" class="mx-auto mb-0 mt-8 max-w-md space-y-4">
      <div>
        <label for="name" class="sr-only">Name</label>
        <div class="relative">
          <input
            type="text"
            id="name"
            name="name"
            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
            placeholder="Enter your name"
            required
          />
        </div>
      </div>

      <div>
        <label for="phone" class="sr-only">Phone</label>
        <div class="relative">
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
            placeholder="Your phone number"
            required
          />
        </div>
      </div>

      <div>
        <label for="postal-code" class="sr-only">Postal Code</label>
        <div class="relative">
          <input
            type="text"
            id="postal-code"
            name="postal_code"
            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
            placeholder="Your postal code"
            required
          />
        </div>
      </div>

      <div class="text-heading-1">
        <label class="sr-only">Service Type</label>
        <div class="relative">
          <div class="flex items-center space-x-4">
            <label class="flex items-center">
              <input type="radio" name="service" value="standard" class="mr-2" required />
              Standard Service
            </label>
            <label class="flex items-center">
              <input type="radio" name="service" value="deep-clean" class="mr-2" required />
              Deep Clean
            </label>
            <label class="flex items-center">
              <input type="radio" name="service" value="custom" class="mr-2" required />
              Custom
            </label>
          </div>
        </div>
      </div>

      <div>
        <label for="description" class="sr-only">Description</label>
        <div class="relative">
          <textarea
            id="description"
            name="description"
            class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
            placeholder="Add a description"
            required
          ></textarea>
        </div>
      </div>

      <div class="flex justify-center">
        <button
          type="submit"
          class="inline-block rounded-lg bg-pink-500 px-20 py-3 text-sm font-medium text-white"
        >
          Submit
        </button>
      </div>

        <nav class="flex flex-wrap gap-x-4 gap-y-4 mt-8 justify-center">
          <SocialPil href="https://mx.linkedin.com/"
            class={` 
              border border-blue-400 rounded-full 
              flex justify-center items-center gap-x-2 
              py-2 px-4
              transition 
              hover:scale-110
              bg-blue-400 hover:bg-blue-600
            `}
          >
            <Facebook class="size-6" />
            Facebook
          </SocialPil>

          <SocialPil href="https://mx.linkedin.com/"
            class={` 
              border border-orange-400 rounded-full 
              flex justify-center items-center gap-x-2 
              py-2 px-4
              transition 
              hover:scale-110
              bg-orange-400 hover:bg-orange-600
            `}
          >
            <Instagram class="size-6" />
            Instagram
          </SocialPil>

          <SocialPil href="https://mx.linkedin.com/"
            class={` 
              border border-black rounded-full 
              flex justify-center items-center gap-x-2 
              py-2 px-4
              transition 
              hover:scale-110
              bg-gray-700 hover:bg-gray-400
              text-white
            `}
          >
            <Tiktok class="size-6" />
            Tiktok
          </SocialPil>

          <SocialPil href="https://mx.linkedin.com/"
            class={` 
              border border-red-400 rounded-full 
              flex justify-center items-center gap-x-2 
              py-2 px-4
              transition 
              hover:scale-110
              bg-red-400 hover:bg-red-600
            `}
          >
            <Yelp class="size-6" />
             Yelp
          </SocialPil>

          <SocialPil href="tel:+1234567890"
            class={` 
              border border-green-400 rounded-full 
              flex justify-center items-center gap-x-2 
              py-2 px-4
              transition 
              hover:scale-110
              bg-green-400 hover:bg-green-600
            `}
          >

            <Phone class="size-6" />
            Phone
          </SocialPil>

          <SocialPil href="mailto:info@magical-cleaningservice.com"
            class={` 
              border border-red-400 rounded-full 
              flex justify-center items-center gap-x-2 
              py-2 px-4
              transition 
              hover:scale-110
              bg-red-400 hover:bg-red-600
            `}
          >
            <Gmail class="size-6" />
            E-mail
          </SocialPil>

        </nav>
    </form>
  </div>

  <div class="relative h-64 w-full sm:h-96 lg:h-full lg:w-1/2">
    <img
      alt=""
      src="/contact.jpg"
      class="absolute inset-0 h-full w-full object-cover"
    />
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      if (form) {
        form.addEventListener('submit', function(event) {
          event.preventDefault();
          const formData = new FormData(form);

          fetch(form.action, {
            method: form.method,
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          }).then(response => {
            if (response.ok) {
              alert('Thank you for your message! We will get back to you soon.');
              form.reset();
            } else {
              alert('Oops! There was a problem submitting your form.');
            }
          }).catch(error => {
            alert('Oops! There was a problem submitting your form.');
          });
        });
      }
    });
  </script>
</section>