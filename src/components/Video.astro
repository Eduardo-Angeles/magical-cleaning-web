---
import Button from './Button.astro';
---
<div class="relative h-[60vh] w-full max-w-[100vw] md:aspect-video md:h-full">
  <div class="absolute inset-0 m-auto w-full h-full flex justify-center flex-col items-center z-20">
    <section class="animate-fade-up flex justify-center items-center gap-8 flex-col aspect-[343/350] md:aspect-[343/160] 2xl:aspect-[343/260] mb-[-4rem]">
      <h1 class="relative z-30 mb-4 text-5xl font-extrabold text-gray-900 dark:text-white md:text-6xl lg:text-7xl text-center">
        <span class="text-transparent bg-clip-text bg-gradient-to-r to-pink-600 from-sky-500">Magical <br> Cleaning </span> 
        Services.
        </h1>
        <p class="relative z-30 mt-4 max-w-xs sm:max-w-lg sm:text-xl/relaxed font-semibold">
        House and Apartment Cleaning in Jersey City and Surrounding Areas â€“ Let Our Expert Team Take Care of Your Home!.
        </p>
    </section>
    <Button class="animate-fade-up" url="https://www.youtube.com/watch?v=1YmpPrqKP-g">
      Contact Us
    </Button>
  </div>

  <video
    class="cp-v h-full w-full animate-fade object-cover object-top animate-duration-1000 animate-ease-in-out"
    src="/video.mp4"
    autoplay
    loop
    muted></video>
  <video
    class="absolute -bottom-48 -z-40 blur-3xl"
    src="/video.mp4"
    autoplay
    loop
    muted></video>
</div>

