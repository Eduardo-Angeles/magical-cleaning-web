---
import Facebook from "./icons/Facebook.astro"
import Instagram from "./icons/Instagram.astro"
import Tiktok from "./icons/Tiktok.astro"
import Logo from "./Logo.astro"
---

<footer class="mt-24 bg-black/80">
  <div class="mx-auto w-full max-w-screen-xl p-4 px-6 py-6 lg:py-8">
    <div class="md:flex md:justify-between">
      <div class="mb-6 flex flex-col md:mb-0">
        <a
          href="/"
          class="-mt-14 flex items-center justify-center"
        >
          <Logo class="h-auto w-24" />
        </a>

        <div class="mt-6 flex justify-center gap-x-4">
          <a href="https://www.facebook.com/profile.php?id=61562088982597&mibextid=LVqgqoT8rQke8goU" class="text-white hover:text-pink-500 duration-300">
            <Facebook />
            <span class="sr-only">Facebook</span>
          </a>

          <a href="https://www.instagram.com/magicalcleaning_services/" class="text-white hover:text-pink-500  duration-300">
            <Instagram />
            </svg>
            <span class="sr-only">Instagram</span>
          </a>

          <a href="https://www.tiktok.com/@magicalcleaningservices" class="text-white hover:text-pink-500 duration-300">
            <Tiktok />
            <span class="sr-only">Tiktok</span>
          </a>
        
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 sm:gap-6">
        <div>
          <h2 class="mb-6 text-sm font-semibold uppercase text-white">
            Services
          </h2>
          <ul class="flex flex-col gap-2 font-medium text-gray-400">
            <li>
              <a
                href="/contact"
                class="hover:underline hover:text-pink-500 duration-300"
                >Standard Cleaning</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="hover:underline hover:text-pink-500 duration-300"
                >Deep Cleaning</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="hover:underline hover:text-pink-500 duration-300"
                >More Services</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold uppercase text-white">
            Site web
          </h2>
          <ul class="flex flex-col gap-2 font-medium text-gray-400">
            <li>
              <a
                href="/"
                class="hover:underline hover:text-pink-500 duration-300"
                >HOME</a
              >
            </li>
            <li>
              <a
                href="#services"
                class="hover:underline hover:text-pink-500 duration-300"
                >Services</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="hover:underline hover:text-pink-500 duration-300"
                >Contact</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h2 class="mb-0 text-sm font-semibold uppercase text-white">
            PRODUCED_BY: NIcrosil
          </h2>
          <a href="" target="" rel="noreferrer">
            <img
              src="https://uploads.coppermind.net/Nicrosil.svg"
              alt="Logo Nicrosil"
              width="100"
              height="100"
            />
          </a>
        </div>
      </div>
    </div>
    <hr class="my-6 border-white/10 sm:mx-auto lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-400 sm:text-center"
        >DISCLAIMER
      </span>
      <div class="mt-4 flex sm:mt-0 sm:justify-center">
        <a
          href=""
          class="text-gray-500 hover:text-white ms-5 duration-300"
        >
          <svg
            class="h-4 w-4"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="sr-only">GitHub account</span>
        </a>
      </div>
    </div>
  </div>
</footer>
